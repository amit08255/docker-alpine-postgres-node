{
  "name": "loan-management",
  "version": "1.0.0",
  "description": "Loan management system",
  "main": "index.js",
  "scripts": {
    "transpile": "npx babel ./ --out-dir dist --ignore '/**/*.spec.js','/**/*.test.js','/**/*.jsx','./dist/','./node_modules/','./.next/','./__tests__/','components/','./containers/','./pages/'",
    "dev": "export REACT_APP_ENV=staging && npm run transpile && node ./dist/server.js -p $PORT",
    "start": "export REACT_APP_ENV=production && NODE_ENV=production node ./dist/server.js -p $PORT",
    "buildscript": "./node_modules/next/dist/bin/next build && npm run transpile",
    "build": "NODE_ENV=production npm run buildscript",
    "lint": "eslint . --ext .jsx,.js",
    "lint:fix": "eslint . --fix --ext .jsx,.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "validate": "npm run lint && npm run test"
  },
  "author": "Amit Kumar",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "next": "^10.0.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "semantic-ui-react": "^2.0.1",
    "styled-components": "^5.2.0",
    "sweetalert": "^2.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-regenerator": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@testing-library/dom": "^7.22.5",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.1.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest-dom": "^3.1.7",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "fast-deep-equal": "^3.1.3",
    "husky": "^4.2.5",
    "is-buffer": "^2.0.4",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb"
    ]
  }
